	case ${vsarch} in
	x86) vsexes+=( 'name=Assembler executable=ml.exe  ' ) ;;
	x64) vsexes+=( 'name=Assembler executable=ml64.exe' ) ;;
	esac
	local vsexe
	for vsexe in "${vsexes[@]}"
	do
		echo "${vsexe}"
	done
	return 0
