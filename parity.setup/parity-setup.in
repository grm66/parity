args-to-chosts() {
	local arg chost chosts=()
	for arg in "$@"
	do
		chost=$(get-chost "${arg}")
		is-supported-chost "${chost}" || die "Invalid configuration value '${arg}' (try --list-supported.)"
		chosts+=("${chost}")
	done
	echo "${chosts[@]}"
	return 0
}

