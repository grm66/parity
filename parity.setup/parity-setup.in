		expected=${input%:*}
		input=${input#*:}
		output=$(get-chost "${input}")
		if [[ ${output} == "${expected}" ]]; then
			verbose "  OK  : get-chost '${input}' returns '${output}'"
		else
			ret=1
			verbose " FAIL : get-chost '${input}' returns '${output}', expected '${expected}'"
		fi
	done
	return ${ret}
}
